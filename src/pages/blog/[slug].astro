---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Comments from '../../components/Comments.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const { title, description, pubDate, updatedDate, tags, heroImage } = post.data;

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// 获取所有文章用于上一篇/下一篇导航
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => {
  return a.data.pubDate.valueOf() - b.data.pubDate.valueOf();
});

const currentIndex = sortedPosts.findIndex((p) => p.slug === post.slug);
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

<Layout title={`${title} - KuroJim`} description={description}>
  <Header currentPath={`/blog/${post.slug}`} />

  <main class="flex-1 pt-14">
    <article class="max-w-3xl mx-auto px-6 sm:px-8 py-12 sm:py-16">
      <!-- Article Header -->
      <header class="mb-12">
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
              <span class="inline-flex items-center px-3 py-1 text-sm font-medium bg-apple-blue/10 text-apple-blue rounded-full">
                {tag}
              </span>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-semibold text-apple-gray-900 mb-6 leading-tight tracking-tight">
          {title}
        </h1>

        <!-- Meta Info -->
        <div class="flex flex-wrap items-center gap-4 text-sm text-apple-gray-500">
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={pubDate.toISOString()}>
              {formatDate(pubDate)}
            </time>
          </div>

          {updatedDate && (
            <div class="flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              <span>
                更新于 {formatDate(updatedDate)}
              </span>
            </div>
          )}
        </div>
      </header>

      <!-- Hero Image -->
      {heroImage && (
        <div class="mb-12 aspect-video rounded-3xl overflow-hidden bg-apple-gray-100">
          <img
            src={heroImage}
            alt={title}
            class="w-full h-full object-cover"
          />
        </div>
      )}

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="mt-16 pt-8 border-t border-apple-gray-200">
        <!-- Navigation -->
        <nav class="flex justify-between gap-4 mb-12">
          {prevPost ? (
            <a
              href={`/blog/${prevPost.slug}`}
              class="flex-1 p-6 bg-apple-gray-50 rounded-2xl hover:bg-apple-gray-100 transition-colors"
            >
              <div class="text-sm text-apple-gray-500 mb-2">上一篇</div>
              <div class="font-medium text-apple-gray-900 line-clamp-2">
                {prevPost.data.title}
              </div>
            </a>
          ) : (
            <div class="flex-1" />
          )}

          {nextPost ? (
            <a
              href={`/blog/${nextPost.slug}`}
              class="flex-1 p-6 bg-apple-gray-50 rounded-2xl hover:bg-apple-gray-100 transition-colors text-right"
            >
              <div class="text-sm text-apple-gray-500 mb-2">下一篇</div>
              <div class="font-medium text-apple-gray-900 line-clamp-2">
                {nextPost.data.title}
              </div>
            </a>
          ) : (
            <div class="flex-1" />
          )}
        </nav>

        <!-- Back to List -->
        <a
          href="/blog"
          class="inline-flex items-center gap-2 px-6 py-3 bg-apple-gray-50 text-apple-gray-700 rounded-full hover:bg-apple-gray-100 transition-all"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span>返回博客列表</span>
        </a>
      </footer>

      <!-- Comments Section -->
      <section class="mt-16 pt-8 border-t border-apple-gray-200">
        <h2 class="text-2xl font-semibold text-apple-gray-900 mb-8">评论</h2>
        <Comments />
      </section>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  .prose {
    --tw-prose-body: #424245;
    --tw-prose-headings: #1d1d1f;
    --tw-prose-links: #0071e3;
    --tw-prose-bold: #1d1d1f;
    --tw-prose-code: #0071e3;
    --tw-prose-pre-code: #e5e7eb;
    --tw-prose-pre-bg: #1d1d1f;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .prose h2 {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.875rem;
  }

  .prose h3 {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .prose p {
    margin-bottom: 1.25rem;
    line-height: 1.75;
  }

  .prose a {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: #0077ed;
  }

  .prose code {
    padding: 0.2em 0.4em;
    background-color: #f5f5f7;
    border-radius: 0.25em;
    font-size: 0.875em;
  }

  .prose pre {
    margin: 1.5rem 0;
    border-radius: 0.75rem;
    overflow-x: auto;
  }

  .prose pre code {
    padding: 1rem;
    background-color: transparent;
    font-size: 0.875em;
    line-height: 1.5;
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1.25rem;
    padding-left: 1.625rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose blockquote {
    margin: 1.5rem 0;
    padding-left: 1rem;
    border-left: 3px solid #d2d2d7;
    color: #6e6e73;
    font-style: italic;
  }

  .prose img {
    margin: 2rem 0;
    border-radius: 1rem;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

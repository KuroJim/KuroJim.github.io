---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Comments from '../../components/Comments.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const { title, description, pubDate, updatedDate, tags, heroImage } = post.data;

// GitHub 编辑链接
const githubRepo = 'KuroJim/KuroJim.github.io';
const githubBranch = 'master';
const editUrl = `https://github.com/${githubRepo}/edit/${githubBranch}/src/content/blog/${post.slug}.md`;
const newIssueUrl = `https://github.com/${githubRepo}/issues/new?title=[Feedback]%20${encodeURIComponent(title)}`;

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// 获取所有文章用于上一篇/下一篇导航
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => {
  return a.data.pubDate.valueOf() - b.data.pubDate.valueOf();
});

const currentIndex = sortedPosts.findIndex((p) => p.slug === post.slug);
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

<Layout title={`${title} - KuroJim`} description={description}>
  <Header currentPath={`/blog/${post.slug}`} />

  <main class="flex-1 pt-14">
    <!-- Progress Bar -->
    <div class="fixed top-14 left-0 right-0 h-[2px] bg-apple-gray-200/50 z-40">
      <div class="h-full bg-apple-blue origin-left scale-x-0 reading-progress-bar"></div>
    </div>

    <article class="max-w-4xl mx-auto px-6 sm:px-8 py-16 sm:py-24 relative">
      <!-- Article Header -->
      <header class="mb-16 max-w-3xl">
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-5">
            {tags.map((tag) => (
              <span class="inline-flex items-center px-2.5 py-1 text-xs font-medium bg-apple-blue/10 text-apple-blue rounded-full">
                {tag}
              </span>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-semibold text-apple-gray-900 mb-5 leading-[1.1] tracking-tight">
          {title}
        </h1>

        <!-- Description -->
        {description && (
          <p class="text-lg text-apple-gray-600 mb-6 leading-relaxed font-normal">
            {description}
          </p>
        )}

        <!-- Meta Info Card -->
        <div class="flex items-center gap-5 text-sm text-apple-gray-500">
          <div class="flex items-center gap-1.5">
            <svg class="w-3.5 h-3.5 text-apple-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={pubDate.toISOString()}>
              {formatDate(pubDate)}
            </time>
          </div>

          {updatedDate && (
            <>
              <span class="w-px h-3 bg-apple-gray-300"></span>
              <div class="flex items-center gap-1.5">
                <svg class="w-3.5 h-3.5 text-apple-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <span>
                  更新于 {formatDate(updatedDate)}
                </span>
              </div>
            </>
          )}
        </div>
      </header>

      <!-- Hero Image -->
      {heroImage && (
        <div class="mb-12 aspect-video rounded-2xl overflow-hidden bg-apple-gray-100 shadow-apple-sm">
          <img
            src={heroImage}
            alt={title}
            class="w-full h-full object-cover"
          />
        </div>
      )}

      <!-- Article Content with Apple-style typography -->
      <div class="prose prose-apple max-w-none">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="mt-24 pt-10 border-t border-apple-gray-200">
        <!-- Edit on GitHub -->
        <div class="mb-10 p-5 bg-gradient-to-r from-apple-gray-50 to-white rounded-2xl border border-apple-gray-200">
          <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
            <div>
              <h3 class="font-semibold text-apple-gray-900 mb-1">发现错误或想要改进？</h3>
              <p class="text-sm text-apple-gray-600">你可以在 GitHub 上直接编辑这篇文章，或提交问题反馈。</p>
            </div>
            <div class="flex items-center gap-3">
              <a
                href={editUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 py-2.5 bg-apple-gray-900 text-white text-sm rounded-full hover:bg-apple-gray-800 transition-all duration-200 shadow-apple hover:shadow-apple-md font-medium"
              >
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                <span>编辑文章</span>
              </a>
              <a
                href={newIssueUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 px-5 py-2.5 bg-white text-apple-gray-700 text-sm rounded-full hover:shadow-sm transition-all duration-200 border border-apple-gray-200 hover:border-apple-gray-300 font-medium"
              >
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>反馈问题</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Author Card -->
        <div class="mb-10 p-5 bg-apple-gray-50 rounded-2xl">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-apple-blue to-purple-500 p-[2px] flex-shrink-0">
              <div class="w-full h-full rounded-full bg-white flex items-center justify-center">
                <span class="text-lg font-semibold bg-gradient-to-br from-apple-gray-800 to-apple-gray-600 bg-clip-text text-transparent">KJ</span>
              </div>
            </div>
            <div>
              <div class="font-semibold text-apple-gray-900 mb-0.5">Quanjia Xiao</div>
              <p class="text-sm text-apple-gray-600 leading-relaxed">
                北京大学研究生 · AI 算法研究员
              </p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex justify-between gap-4 mb-10">
          {prevPost ? (
            <a
              href={`/blog/${prevPost.slug}`}
              class="flex-1 p-4 bg-white rounded-xl hover:shadow-sm transition-all duration-200 group border border-apple-gray-200"
            >
              <div class="flex items-center gap-1.5 text-xs text-apple-gray-500 mb-1.5">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                上一篇
              </div>
              <div class="text-sm font-medium text-apple-gray-900 group-hover:text-apple-blue transition-colors line-clamp-2">
                {prevPost.data.title}
              </div>
            </a>
          ) : (
            <div class="flex-1" />
          )}

          {nextPost ? (
            <a
              href={`/blog/${nextPost.slug}`}
              class="flex-1 p-4 bg-white rounded-xl hover:shadow-sm transition-all duration-200 group border border-apple-gray-200 text-right"
            >
              <div class="flex items-center justify-end gap-1.5 text-xs text-apple-gray-500 mb-1.5">
                下一篇
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <div class="text-sm font-medium text-apple-gray-900 group-hover:text-apple-blue transition-colors line-clamp-2">
                {nextPost.data.title}
              </div>
            </a>
          ) : (
            <div class="flex-1" />
          )}
        </nav>

        <!-- Back to List -->
        <div class="flex justify-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 px-6 py-2.5 bg-white text-apple-gray-700 text-sm rounded-full hover:shadow-sm transition-all duration-200 border border-apple-gray-200 hover:border-apple-gray-300"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>返回博客列表</span>
          </a>
        </div>
      </footer>

      <!-- Comments Section -->
      <section class="mt-16 pt-8 border-t border-apple-gray-200">
        <h2 class="text-xl font-semibold text-apple-gray-900 mb-6">评论</h2>
        <Comments />
      </section>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  /* 基于Stripe、Medium、Ghost等优秀博客的排版最佳实践 */
  .prose-apple {
    color: #1d1d1f;
    font-size: 18px;
    line-height: 1.7;
    letter-spacing: -0.003em;
    font-weight: 400;
    max-width: 680px;
    margin-left: auto;
    margin-right: auto;
  }

  /* 标题层级 - Stripe风格 */
  .prose-apple h1,
  .prose-apple h2,
  .prose-apple h3,
  .prose-apple h4,
  .prose-apple h5,
  .prose-apple h6 {
    font-weight: 600;
    letter-spacing: -0.01em;
    color: #1d1d1f;
    margin-top: 2em;
    margin-bottom: 0.8em;
  }

  .prose-apple h2 {
    font-size: 30px;
    line-height: 1.25;
    margin-top: 2.5em;
    margin-bottom: 1em;
    padding-bottom: 0.4em;
    border-bottom: 1px solid #e5e5e7;
  }

  .prose-apple h3 {
    font-size: 24px;
    line-height: 1.3;
    margin-top: 2em;
  }

  .prose-apple h4 {
    font-size: 20px;
    line-height: 1.4;
  }

  /* 段落 - 更舒适的间距 */
  .prose-apple p {
    margin-top: 0;
    margin-bottom: 1.4em;
    line-height: 1.7;
  }

  /* 链接 - Medium风格 */
  .prose-apple a {
    color: #0066cc;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 3px;
    transition: color 0.15s ease;
  }

  .prose-apple a:hover {
    color: #004499;
  }

  /* 行内代码 - GitHub风格 */
  .prose-apple code {
    font-family: 'SF Mono', SFMono-Regular, ui-monospace, Monaco, 'Cascadia Code', monospace;
    font-size: 0.87em;
    font-weight: 500;
    padding: 0.2em 0.4em;
    background-color: rgba(175, 184, 193, 0.2);
    border-radius: 6px;
    color: #1d1d1f;
  }

  /* 代码块 */
  .prose-apple pre {
    background-color: #f6f8fa;
    border-radius: 8px;
    padding: 16px;
    margin: 1.6em 0;
    overflow-x: auto;
    font-size: 14px;
    line-height: 1.5;
  }

  .prose-apple pre code {
    background-color: transparent;
    color: #24292f;
    padding: 0;
    font-weight: 400;
  }

  /* 列表 */
  .prose-apple ul,
  .prose-apple ol {
    margin-top: 0;
    margin-bottom: 1.4em;
    padding-left: 1.8em;
  }

  .prose-apple li {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  .prose-apple li > ul,
  .prose-apple li > ol {
    margin-top: 0.5em;
    margin-bottom: 0.5em;
  }

  /* 引用块 */
  .prose-apple blockquote {
    margin: 1.6em 0;
    padding: 0 1.2em;
    border-left: 3px solid #d0d7de;
    color: #57606a;
  }

  .prose-apple blockquote p {
    margin-bottom: 0;
  }

  /* 图片 */
  .prose-apple img {
    margin: 2em 0;
    border-radius: 6px;
    max-width: 100%;
    height: auto;
  }

  /* 表格 */
  .prose-apple table {
    width: 100%;
    margin: 2em 0;
    border-collapse: collapse;
    font-size: 15px;
  }

  .prose-apple thead {
    border-bottom: 2px solid #d0d7de;
  }

  .prose-apple th {
    font-weight: 600;
    text-align: left;
    padding: 8px 16px;
    color: #1d1d1f;
  }

  .prose-apple td {
    padding: 8px 16px;
    border-bottom: 1px solid #d8dee4;
  }

  /* 分割线 */
  .prose-apple hr {
    border: none;
    border-top: 2px solid #e5e5e7;
    margin: 3em 0;
  }

  /* 强调和斜体 */
  .prose-apple strong {
    font-weight: 600;
    color: #1d1d1f;
  }

  .prose-apple em {
    font-style: italic;
  }

  /* 标题后的第一段不需要额外间距 */
  .prose-apple h2 + p,
  .prose-apple h3 + p {
    margin-top: 0.6em;
  }

  /* 首段不缩进 */
  .prose-apple > p:first-of-type {
    margin-top: 0;
  }

  /* Reading progress bar animation */
  .reading-progress-bar {
    transition: transform 0.1s ease-out;
  }
</style>

<script>
  // Reading progress bar
  const progressBar = document.querySelector('.reading-progress-bar') as HTMLElement;
  if (progressBar) {
    const updateProgress = () => {
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight - windowHeight;
      const scrolled = window.scrollY;
      const progress = Math.min((scrolled / documentHeight) * 100, 100);
      progressBar.style.transform = `scaleX(${progress / 100})`;
    };

    window.addEventListener('scroll', () => {
      window.requestAnimationFrame(updateProgress);
    }, { passive: true });

    updateProgress();
  }
</script>

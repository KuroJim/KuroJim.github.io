---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Comments from '../../components/Comments.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const { title, description, pubDate, updatedDate, tags, heroImage } = post.data;

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

// 获取所有文章用于上一篇/下一篇导航
const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) => {
  return a.data.pubDate.valueOf() - b.data.pubDate.valueOf();
});

const currentIndex = sortedPosts.findIndex((p) => p.slug === post.slug);
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

<Layout title={`${title} - KuroJim`} description={description}>
  <Header currentPath={`/blog/${post.slug}`} />

  <main class="flex-1 pt-14">
    <!-- Progress Bar -->
    <div class="fixed top-14 left-0 right-0 h-[3px] bg-apple-gray-200/50 z-40">
      <div class="h-full bg-apple-blue origin-left scale-x-0 reading-progress-bar"></div>
    </div>

    <article class="max-w-3xl mx-auto px-6 sm:px-8 py-12 sm:py-20 relative">
      <!-- Article Header -->
      <header class="mb-12">
        <!-- Tags -->
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
              <span class="inline-flex items-center px-3 py-1.5 text-sm font-medium bg-apple-blue/10 text-apple-blue rounded-full hover:bg-apple-blue/15 transition-colors cursor-default">
                {tag}
              </span>
            ))}
          </div>
        )}

        <!-- Title -->
        <h1 class="text-4xl sm:text-5xl md:text-6xl font-semibold text-apple-gray-900 mb-6 leading-tight tracking-tight">
          {title}
        </h1>

        <!-- Description -->
        {description && (
          <p class="text-xl text-apple-gray-600 mb-8 leading-relaxed">
            {description}
          </p>
        )}

        <!-- Meta Info Card -->
        <div class="inline-flex items-center gap-6 px-6 py-3 bg-apple-gray-50 rounded-full">
          <div class="flex items-center gap-2 text-sm text-apple-gray-600">
            <svg class="w-4 h-4 text-apple-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <time datetime={pubDate.toISOString()}>
              {formatDate(pubDate)}
            </time>
          </div>

          {updatedDate && (
            <>
              <div class="w-px h-4 bg-apple-gray-300"></div>
              <div class="flex items-center gap-2 text-sm text-apple-gray-600">
                <svg class="w-4 h-4 text-apple-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <span>
                  更新于 {formatDate(updatedDate)}
                </span>
              </div>
            </>
          )}
        </div>
      </header>

      <!-- Hero Image -->
      {heroImage && (
        <div class="mb-12 aspect-video rounded-3xl overflow-hidden bg-apple-gray-100 shadow-apple-md hover:shadow-apple-lg transition-shadow duration-300">
          <img
            src={heroImage}
            alt={title}
            class="w-full h-full object-cover"
          />
        </div>
      )}

      <!-- Article Content -->
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>

      <!-- Article Footer -->
      <footer class="mt-24 pt-10 border-t border-apple-gray-200">
        <!-- Author Card -->
        <div class="mb-12 p-6 bg-gradient-to-br from-apple-gray-50 to-white rounded-3xl border border-apple-gray-200/50 shadow-apple">
          <div class="flex items-start gap-4">
            <div class="w-14 h-14 rounded-full bg-gradient-to-br from-apple-blue to-purple-500 p-[2px] flex-shrink-0">
              <div class="w-full h-full rounded-full bg-white flex items-center justify-center">
                <span class="text-xl font-semibold bg-gradient-to-br from-apple-gray-800 to-apple-gray-600 bg-clip-text text-transparent">KJ</span>
              </div>
            </div>
            <div>
              <div class="font-semibold text-apple-gray-900 mb-1">Quanjia Xiao</div>
              <p class="text-sm text-apple-gray-600 leading-relaxed">
                北京大学研究生 · AI 算法研究员<br />
                专注于大模型训练和多模态 AI 研究
              </p>
            </div>
          </div>
        </div>

        <!-- Navigation -->
        <nav class="flex justify-between gap-4 mb-12">
          {prevPost ? (
            <a
              href={`/blog/${prevPost.slug}`}
              class="flex-1 p-5 bg-apple-gray-50 rounded-2xl hover:bg-white hover:shadow-apple-md transition-all duration-300 hover:-translate-y-0.5 group border border-apple-gray-200/50"
            >
              <div class="flex items-center gap-2 text-sm text-apple-gray-500 mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
                上一篇
              </div>
              <div class="font-medium text-apple-gray-900 group-hover:text-apple-blue transition-colors line-clamp-2">
                {prevPost.data.title}
              </div>
            </a>
          ) : (
            <div class="flex-1" />
          )}

          {nextPost ? (
            <a
              href={`/blog/${nextPost.slug}`}
              class="flex-1 p-5 bg-apple-gray-50 rounded-2xl hover:bg-white hover:shadow-apple-md transition-all duration-300 hover:-translate-y-0.5 group border border-apple-gray-200/50 text-right"
            >
              <div class="flex items-center justify-end gap-2 text-sm text-apple-gray-500 mb-2">
                下一篇
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <div class="font-medium text-apple-gray-900 group-hover:text-apple-blue transition-colors line-clamp-2">
                {nextPost.data.title}
              </div>
            </a>
          ) : (
            <div class="flex-1" />
          )}
        </nav>

        <!-- Back to List -->
        <div class="flex justify-center">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 px-7 py-3.5 bg-apple-gray-50 text-apple-gray-700 rounded-full hover:bg-white hover:shadow-apple-md transition-all duration-300 font-medium border border-apple-gray-200/50 hover:border-apple-gray-300"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            <span>返回博客列表</span>
          </a>
        </div>
      </footer>

      <!-- Comments Section -->
      <section class="mt-20 pt-10 border-t border-apple-gray-200">
        <h2 class="text-2xl font-semibold text-apple-gray-900 mb-8">评论</h2>
        <Comments />
      </section>
    </article>
  </main>

  <Footer />
</Layout>

<style>
  .prose {
    --tw-prose-body: #424245;
    --tw-prose-headings: #1d1d1f;
    --tw-prose-links: #0071e3;
    --tw-prose-bold: #1d1d1f;
    --tw-prose-code: #0071e3;
    --tw-prose-pre-code: #e5e7eb;
    --tw-prose-pre-bg: #1d1d1f;
  }

  /* Headings with Apple style */
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    font-weight: 600;
    letter-spacing: -0.02em;
    color: #1d1d1f;
  }

  .prose h2 {
    margin-top: 3rem;
    margin-bottom: 1.25rem;
    font-size: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e8e8ed;
  }

  .prose h3 {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-size: 1.625rem;
  }

  .prose h4 {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-size: 1.375rem;
  }

  /* Paragraphs with better readability */
  .prose p {
    margin-bottom: 1.5rem;
    line-height: 1.8;
    font-size: 1.0625rem;
  }

  /* Links with smooth hover */
  .prose a {
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-thickness: 1px;
    text-decoration-color: #0071e33;
    transition: color 0.15s ease-in-out, text-decoration-color 0.15s ease-in-out;
  }

  .prose a:hover {
    color: #0077ed;
    text-decoration-color: #0077ed;
  }

  /* Inline code */
  .prose code {
    padding: 0.25em 0.5em;
    background: linear-gradient(135deg, #f5f5f7 0%, #e8e8ed 100%);
    border-radius: 6px;
    font-size: 0.875em;
    font-weight: 500;
    font-family: 'SF Mono', SFMono-Regular, ui-monospace, Menlo, Monaco, 'Cascadia Code', monospace;
    border: 1px solid rgba(0, 0, 0, 0.04);
  }

  /* Code blocks with Xcode-style */
  .prose pre {
    margin: 2rem 0;
    border-radius: 16px;
    overflow-x: auto;
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.08);
    border: 1px solid rgba(0, 0, 0, 0.06);
  }

  .prose pre code {
    padding: 1.25rem;
    background-color: transparent;
    font-size: 0.875em;
    line-height: 1.7;
    font-weight: 400;
    border: none;
    background: none;
  }

  /* Lists with better spacing */
  .prose ul,
  .prose ol {
    margin-bottom: 1.5rem;
    padding-left: 1.75rem;
  }

  .prose li {
    margin-bottom: 0.625rem;
    line-height: 1.75;
  }

  .prose li::marker {
    color: #0071e3;
  }

  /* Blockquote with Apple style */
  .prose blockquote {
    margin: 2rem 0;
    padding: 1.25rem 1.5rem;
    border-left: 4px solid #0071e3;
    background: linear-gradient(135deg, #f5f5f7 0%, #ffffff 100%);
    border-radius: 0 16px 16px 0;
    color: #424245;
    font-style: normal;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.04);
  }

  /* Images with subtle shadow */
  .prose img {
    margin: 2.5rem 0;
    border-radius: 20px;
    box-shadow: 0 4px 32px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .prose img:hover {
    transform: scale(1.01);
    box-shadow: 0 8px 48px rgba(0, 0, 0, 0.12);
  }

  /* Tables */
  .prose table {
    margin: 2rem 0;
    border-collapse: separate;
    border-spacing: 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.04);
  }

  .prose thead {
    background: linear-gradient(135deg, #f5f5f7 0%, #e8e8ed 100%);
  }

  .prose th {
    font-weight: 600;
    color: #1d1d1f;
    padding: 0.875rem 1rem;
    text-align: left;
  }

  .prose td {
    padding: 0.875rem 1rem;
    border-top: 1px solid #e8e8ed;
  }

  .prose tr:hover td {
    background-color: #f5f5f7;
  }

  /* Horizontal rule */
  .prose hr {
    margin: 3rem 0;
    border: none;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, #e8e8ed 50%, transparent 100%);
  }

  /* Strong and emphasis */
  .prose strong {
    font-weight: 600;
    color: #1d1d1f;
  }

  .prose em {
    font-style: italic;
    color: #424245;
  }

  /* Line clamping utilities */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Reading progress bar animation */
  .reading-progress-bar {
    transition: transform 0.1s ease-out;
  }
</style>

<script>
  // Reading progress bar
  const progressBar = document.querySelector('.reading-progress-bar') as HTMLElement;
  if (progressBar) {
    const updateProgress = () => {
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight - windowHeight;
      const scrolled = window.scrollY;
      const progress = Math.min((scrolled / documentHeight) * 100, 100);
      progressBar.style.transform = `scaleX(${progress / 100})`;
    };

    window.addEventListener('scroll', () => {
      window.requestAnimationFrame(updateProgress);
    }, { passive: true });

    updateProgress();
  }
</script>
